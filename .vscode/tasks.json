{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "args": [
        "build",
        "${workspaceFolder}",
        "/p:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test: shared",
      "command": "dotnet",
      "type": "process",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": [
        "test",
        "${workspaceFolder}/tests/Foundatio.Repositories.Tests/Foundatio.Repositories.Tests.csproj",
        "/p:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test: elasticsearch",
      "command": "dotnet",
      "type": "process",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": [
        "test",
        "${workspaceFolder}/tests/Foundatio.Repositories.Elasticsearch.Tests/Foundatio.Repositories.Elasticsearch.Tests.csproj",
        "/p:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "pack", 
      "command": "dotnet pack -c Release -o ${workspaceFolder}/artifacts",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "docker: build",
      "command": "docker build --target build -t foundatio:build . && docker run -v $(pwd)/artifacts:/app/artifacts foundatio:build",
      "type": "shell",
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "docker: test",
      "command": "docker build --target testrunner -t foundatio:test . && docker run -it --net host -v $(pwd)/artifacts:/app/artifacts foundatio:test",
      "type": "shell",
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "docker: elasticsearch",
      "command": "docker-compose up",
      "type": "shell",
      "isBackground": true,
      "group": "test",
      "problemMatcher": []
    }
  ]
}